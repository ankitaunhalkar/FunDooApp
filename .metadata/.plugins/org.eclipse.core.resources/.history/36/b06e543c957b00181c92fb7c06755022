package com.bridgelabz.fundoonotes.user.messaging;


import org.springframework.jms.annotation.JmsListener;
import org.springframework.messaging.Message;
import org.springframework.messaging.MessageHeaders;
import org.springframework.stereotype.Component;

import com.bridgelabz.fundoonotes.user.model.Email;

@Component
public class MailReceiver {

	@JmsListener(destination = "email-queue")
	public void receiveMail(Message<Email> emailObj) {
		
		System.out.println(((Email) emailObj).getName());
		System.out.println(((Email) emailObj).getEmailId());
		System.out.println(((Email) emailObj).getToken());
		
		MessageHeaders headers =  emailObj.getHeaders();
       System.out.println("Application : headers received : {}"+ headers);
         
        Email response = emailObj.getPayload();
        System.out.println("Application : response received : {}"+response);
		
	}
}
