package com.bridgelabz.fundoonotes.note.dao;

import java.util.List;

import org.hibernate.SessionFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

import com.bridgelabz.fundoonotes.note.model.Note;

@Repository
public class NoteDao implements INoteDao{

	@Autowired
	SessionFactory sessionFactory;
	
	@Override
	public long saveNote(Note note) {

		long id = (Long) sessionFactory.getCurrentSession().save(note);
		return id;
	}

	@Override
	public List<Note> getById(long userId) {
		List<Note> notelist = sessionFactory.getCurrentSession().createCriteria(Note.class).list();
		
		return (notelist !=null)?notelist:null;
	}

}
